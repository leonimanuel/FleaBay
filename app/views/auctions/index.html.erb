<% if params[:user_id] %>
	<h1>Your Auctions</h1>
	<h3><%= link_to "Auction New Item", new_user_auction_path(@user) %></h3>
	<ol>
		<% @auctions.each do |auction| %>
			<li><%= link_to auction.item.name, auction_path(auction) %></li>
		<% end %>
	</ol>
<% else %>
	<h1>All Auctions</h1>
	<ol>
		<% @auctions.each do |auction| %>
			<% unless auction.user == @user %>
				<li><%= link_to auction.item.name, auction_path(auction) %></li>
			<% end %>
		<% end %>
	</ol>
<% end %>




