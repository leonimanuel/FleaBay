<h1>Sign Up</h1>

  <% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: name %>
  <% end %>

<%= form_tag ({url: "/signup", method: 'POST'}) do %>
	<%= label_tag :name %>
	<%= text_field_tag :name %> <br>
	<%= label_tag :email %>
	<%= email_field_tag :email %> <br>
	<%= label_tag :password %>
	<%= password_field_tag :password %> <br>
	<%= submit_tag "Log In" %>
<% end %>

<%= link_to "Log in with Facebook", "/auth/facebook" %>

<!-- so error messages don't persist on page reload -->
<% cookies.delete :invalid_login %>